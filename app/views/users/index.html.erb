<h1>Listing users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Name</th>
      <th>Handle</th>
      <th>Sex</th>
      <th>Age</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= user.handle %></td>
        <td><%= user.sex %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

