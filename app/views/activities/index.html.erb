<h1>Listing activities</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th></th>
      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.category.name %></td>
        
        <td><%= link_to 'Edit', edit_activity_path(activity) %>
            <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Category', new_category_path, :class=>'btn' %>
<%= link_to 'New Activity', new_activity_path, :class=>'btn' %>
